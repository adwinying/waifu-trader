{
  "private": true,
  "name": "remix-app-template",
  "description": "",
  "license": "",
  "scripts": {
    "build": "npm run build:css && remix build",
    "build:css": "tailwindcss -o ./app/tailwind.css",
    "dev": "env-cmd npm run dev:base",
    "dev:base": "concurrently 'npm run dev:css' 'npm run dev:remix'",
    "dev:remix": "remix dev",
    "dev:css": "tailwindcss -o ./app/tailwind.css --watch",
    "postinstall": "remix setup node",
    "start": "remix-serve build",
    "lint": "eslint \"{app,prisma,test,cypress}/**/*.{js,jsx,ts,tsx}\"",
    "ts-check": "tsc --noEmit --project tsconfig.json",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:server": "env-cmd -f .env.test npm run dev:base",
    "cypress:open": "start-server-and-test test:server 3002 'cypress open'",
    "cypress:run": "start-server-and-test 'env-cmd -f .env.test npm start' 3002 'cypress run'",
    "prepare": "husky install"
  },
  "dependencies": {
    "@heroicons/react": "^1.0.5",
    "@prisma/client": "^3.8.1",
    "@remix-run/react": "^1.1.1",
    "@remix-run/serve": "^1.1.1",
    "bcryptjs": "^2.4.3",
    "daisyui": "^2.1.0",
    "jest-mock-extended": "^2.0.4",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "remix": "^1.1.1",
    "zod": "^3.11.6",
    "zod-form-data": "^1.1.1"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.1.1",
    "@types/bcryptjs": "^2.4.2",
    "@types/jest": "^27.4.0",
    "@types/react": "^17.0.24",
    "@types/react-dom": "^17.0.9",
    "@typescript-eslint/eslint-plugin": "^5.8.1",
    "@typescript-eslint/parser": "^5.8.1",
    "concurrently": "^6.5.1",
    "cypress": "^9.2.0",
    "env-cmd": "^10.1.0",
    "esbuild-register": "^3.3.1",
    "eslint": "^8.6.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-cypress": "^2.12.1",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "husky": "^7.0.4",
    "jest": "^27.4.5",
    "lint-staged": "^12.1.4",
    "prettier": "2.5.1",
    "prettier-plugin-tailwindcss": "^0.1.7",
    "prisma": "^3.8.1",
    "start-server-and-test": "^1.14.0",
    "tailwindcss": "^3.0.8",
    "ts-jest": "^27.1.2",
    "typescript": "^4.5.4"
  },
  "engines": {
    "node": ">=14"
  },
  "prisma": {
    "seed": "node --require esbuild-register prisma/seed/index.ts"
  },
  "sideEffects": false
}
